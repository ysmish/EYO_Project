<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/compose_background"
    tools:context=".ui.labels.CreateLabelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Create Label form card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/compose_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <!-- Top action bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:background="@color/compose_action_bar_background"
                    android:elevation="1dp">

                    <!-- Close button -->
                    <ImageButton
                        android:id="@+id/btn_close"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Close"
                        android:padding="12dp" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Create New Label"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/mail_unread_text"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp" />

                    <!-- Create button -->
                    <ImageButton
                        android:id="@+id/btn_create"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Create label"
                        android:padding="12dp"
                        android:src="@drawable/ic_add" />

                </LinearLayout>

                <!-- Label name field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Label Name"
                        android:textSize="14sp"
                        android:textColor="@color/compose_label_text"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_label_name"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:hint="Enter label name"
                        android:textColor="@color/compose_input_text"
                        android:textColorHint="@color/compose_hint_text"
                        android:background="@drawable/search_background"
                        android:maxLength="50"
                        android:singleLine="true" />

                    <!-- Info text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The label will be created with a default color that you can customize later."
                        android:textSize="12sp"
                        android:textColor="@color/mail_preview_text"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 