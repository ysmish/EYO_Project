<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/compose_background"
    tools:context=".ui.compose.ComposeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- Compose form card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/compose_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

            <!-- Top action bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:background="@color/compose_action_bar_background"
                android:elevation="1dp">

                <!-- Close/Save as Draft button -->
                <ImageButton
                    android:id="@+id/btn_close_draft"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close and save draft"
                    android:tint="@color/action_icon_tint"
                    android:padding="12dp" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Delete without draft button -->
                <ImageButton
                    android:id="@+id/btn_send"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Send email"
                    android:tint="@color/action_icon_tint"
                    android:padding="12dp"
                    android:src="@drawable/ic_send" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete without saving"
                    android:tint="@color/action_icon_tint"
                    android:padding="12dp"/>

                <!-- Send button -->

            </LinearLayout>

            <!-- Divider -->

                <!-- To field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_to"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:hint="To"
                    android:textColor="@color/compose_input_text"
                    android:textColorHint="@color/compose_hint_text"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btn_add_cc"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_down"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add CC field"
                    android:layout_marginStart="8dp"
                    android:padding="8dp" />

            </LinearLayout>

                <View
                    android:id="@+id/divider_cc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/compose_divider"
                    android:visibility="gone" />

                <!-- CC field (initially hidden) -->
            <LinearLayout
                android:id="@+id/layout_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_cc"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:hint="CC"
                    android:textColor="@color/compose_input_text"
                    android:textColorHint="@color/compose_hint_text"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btn_remove_cc"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_up"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Remove CC field"
                    android:layout_marginStart="8dp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Subject field -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/compose_divider" />

                <EditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="12dp"
                android:textColor="@color/compose_input_text"
                android:hint="Subject"
                android:textColorHint="@color/compose_hint_text"
                android:background="@android:color/transparent">
                </EditText>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/compose_divider" />

            <!-- Body field -->
            <EditText
                android:id="@+id/et_body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="top"
                android:scrollbars="vertical"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:padding="12dp"
                android:textColor="@color/compose_input_text"
                android:hint="Compose mail"
                android:textColorHint="@color/compose_hint_text"
                android:background="@android:color/transparent"
                android:layout_marginBottom="20dp" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 