<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EYO_mail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Compact Navigation View Style -->
    <style name="CompactNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconSize">@dimen/nav_item_icon_size</item>
        <item name="itemTextAppearanceInactive">@style/CompactNavigationTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/CompactNavigationTextAppearance</item>
        <item name="itemMinHeight">@dimen/nav_item_height</item>
        <item name="itemVerticalPadding">8dp</item>
    </style>
    
    <!-- Compact Navigation Text Style -->
    <style name="CompactNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/nav_item_text_size</item>
    </style>
</resources>